@model aspCoreEmpty.Models.TasksExtended

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Tasks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nomer" class="control-label"></label>
                <input asp-for="Nomer" class="form-control" />
                <span asp-validation-for="Nomer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datasozdaniya" class="control-label"></label>
                <input asp-for="Datasozdaniya" class="form-control" />
                <span asp-validation-for="Datasozdaniya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datazakritiya" class="control-label"></label>
                <input asp-for="Datazakritiya" class="form-control" />
                <span asp-validation-for="Datazakritiya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pomeschenie" class="control-label"></label>
                <input asp-for="Pomeschenie" class="form-control" />
                <span asp-validation-for="Pomeschenie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameType" class="control-label"></label>
                @Html.DropDownListFor(x => x.NameTypesAll, new SelectList(Model.NameTypesAll))
            </div>
            <div class="form-group">
                <label asp-for="NameStatus" class="control-label"></label>
                @Html.DropDownListFor(x => x.NameStatusesAll, new SelectList(Model.NameStatusesAll))
            </div>
            <div class="form-group">
                <label asp-for="Ispolnitel" class="control-label"></label>
                <input asp-for="Ispolnitel" class="form-control" />
                <span asp-validation-for="Ispolnitel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sozdatel" class="control-label"></label>
                <input asp-for="Sozdatel" class="form-control" />
                <span asp-validation-for="Sozdatel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sozdatelemail" class="control-label"></label>
                <input asp-for="Sozdatelemail" class="form-control" />
                <span asp-validation-for="Sozdatelemail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chtosdelat" class="control-label"></label>
                <input asp-for="Chtosdelat" class="form-control" />
                <span asp-validation-for="Chtosdelat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>




        </form>
    </div>
    

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
